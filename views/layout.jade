    script.
      Ladda.bind('input[type=submit]');
      $(function() {
        $('#form-submit').click(function(e) {
          e.preventDefault();
          var l = Ladda.create(this);
          l.start();
          $.get("/results?q=" + $('#search-field').val(), function(response) {
            $("#search-results").empty()
            $("#search-results").append(response)
            window.history.pushState("", "", "/search?q="+$('#search-field').val());
            l.stop();
          });
          return false;
        });
      });

